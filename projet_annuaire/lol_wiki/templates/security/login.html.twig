{% extends 'layouts/layout.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
    <section class="page-info-section set-bg" data-setbg="{{ asset('assets/img/clashbannerimage.jpg') }}">
        <div class="pi-content">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5 col-lg-6 text-white">
                        <h2>Connecte-toi  !</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="page-section spad contact-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <div class="row">
                        <div class="col-md-9">
                            <ul class="contact-info-list">
                                <li><div class="cf-left">Adresse</div><div class="cf-right">Rue des potier numéro 3</div></li>
                                <li><div class="cf-left">Téléphone</div><div class="cf-right">+324789521</div></li>
                                <li><div class="cf-left">E-mail</div><div class="cf-right">MasterPotier@gmail.com</div></li>
                            </ul>
                        </div>
                    </div>
                    <div class="social-links">
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-dribbble"></i></a>
                        <a href="#"><i class="fa fa-behance"></i></a>
                        <a href="#"><i class="fa fa-linkedin"></i></a>
                    </div>
                </div><br>
                <div class="col-lg-8">
                    <div class="contact-form-warp">

                        <form method="post">


                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <h4 class="comment-title">Connecte toi !</h4>
                            <div style="margin-bottom:30px" class="col-md-12">
                                <label for="inputEmail">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                                <label for="inputPassword">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" required>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            #}
                            <div class="col-md-12">
                                <button style="margin-right:40px" class="btn btn-lg btn-primary" type="submit">
                                    Se connecter
                                </button>
                               <a style="margin-right:40px" href="{{ url( 'register') }}">Pas de compte ? créer en un !</a>
                                <a href="{{ url( 'register') }}">Mot de passe oublié ?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock content %}
