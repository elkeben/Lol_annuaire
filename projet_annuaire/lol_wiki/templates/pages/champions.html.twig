                <li><a href="{{ url('showByLetter', {letter: 'S'}) }}">S</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'T'}) }}">T</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'U'}) }}">U</a></li>
