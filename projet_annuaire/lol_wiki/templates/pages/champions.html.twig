{% extends 'layouts/layout.html.twig' %}


{% block content %}

    <section style="background-color:#eef2f6" class="page-section review-page spad">
        <div class="container">
            <h2 style="" class="section-title">Liste des champions</h2>
            <div style="text-align: center;margin-bottom:30px" class="search-widget justify-content-center text-center add-position">

                {{ form_start(searchForm) }}

                        {{ form_row(searchForm.keyword) }}

                        {{ form_row(searchForm.submit) }}

                {{ form_end(searchForm) }}

            </div>
            <ul class="game-filter section-ul">
                <li><a href="{{ url('showByLetter', {letter: 'A'}) }}">A</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'B'}) }}">B</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'C'}) }}">C</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'D'}) }}">D</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'E'}) }}">E</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'F'}) }}">F</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'G'}) }}">G</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'H'}) }}">H</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'I'}) }}">I</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'J'}) }}">J</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'K'}) }}">K</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'L'}) }}">L</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'M'}) }}">M</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'N'}) }}">N</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'O'}) }}">O</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'P'}) }}">P</a></li>
