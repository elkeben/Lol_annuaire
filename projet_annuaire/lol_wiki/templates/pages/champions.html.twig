                <li><a href="{{ url('showByLetter', {letter: 'W'}) }}">W</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'X'}) }}">X</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'Y'}) }}">Y</a></li>
                <li><a href="{{ url('showByLetter', {letter: 'Z'}) }}">Z</a></li>
            </ul>

            <div class="row">
            {% for champion in champions %}
                <div style="margin-bottom:30px" class="col-md-4">

                        <div class="review-item border">

                            <div class="review-cover set-bg">
                               <a href="{{ url('singleChampion', {slug:champion.slug}) }}"><img  style="height:100%;width:100%" src="{{ asset(champion.image) }}" alt="bogoss"></a>
                                <a class="score yellow" href="{{ url('showByRole',{name:champion.role}) }}">{{ champion.role }}</a>
                            </div>

                            <div class="review-text">
                                <h4><a href="{{ url('singleChampion', {slug:champion.slug}) }}">{{ champion.nom }}</a></h4>
                                <div class="rating">
                                    <p>difficult√©</p>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star is-fade"></i>
                                    <p>{{ champion.type }}</p>
                                </div>
                                <p>{{ champion.presentation }}</p>
                            </div>
                        </div>
                </div>
                {% endfor %}

            </div>

            {{ knp_pagination_render(champions) }}
        </div>
    </section>




{% endblock content %}
