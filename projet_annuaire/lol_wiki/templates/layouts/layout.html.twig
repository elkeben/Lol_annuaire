{% block body %}



{% block header %}

    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header section -->
    <header class="header-section">
        <div class="container">
            <!-- logo -->
            <a class="site-logo" href="{{ url ('home') }}">
                <img width="200px" height="50px" src="{{ asset ('assets/img/20191212013755!League_of_Legends_Logo.png') }}" alt="">
            </a>
            {% if is_granted("ROLE_USER") %}
                <div class="user-panel">
                    <a href="{{ url('profile') }}">Profile</a>
                </div>
            {% else %}
                <div class="user-panel">
                    <a href="{{ url('app_login') }}">Login</a>

                    <a href="{{ url('register') }}"> / Register</a>
                </div>

            {% endif %}


            <!-- responsive -->
            <div class="nav-switch">
                <i class="fa fa-bars"></i>
            </div>
            <!-- site menu -->
            <nav class="main-menu">
                <ul class="main-menu primary-menu">
                    <li><a href="#">Lanes</a>
                        <ul class="sub-menu">
                            <li><a href="{{ url('showByRole', {name: 'top'}) }}">Top</a></li>
                            <li><a href="{{ url('showByRole', {name: 'jgl'}) }}">Jungle</a></li>
                            <li><a href="{{ url('showByRole', {name: 'mid'}) }}">Mid</a></li>
                            <li><a href="{{ url('showByRole', {name: 'adc'}) }}">Adc</a></li>
                            <li><a href="{{ url('showByRole', {name: 'sup'}) }}">Support</a></li>
                        </ul>
                    </li>
                    <li><a href="{{ url('champions') }}">champions</a></li>
                    <li><a href="{{ url('contact') }}">contact</a></li>
                </ul>
            </nav>
        </div>
    </header>


{% endblock header %}

